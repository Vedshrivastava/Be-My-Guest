<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">Login</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username/E-mail</label>
                <input name="username" class="form-control" type="text" id="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" class="form-control" type="password" id="password" required>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>